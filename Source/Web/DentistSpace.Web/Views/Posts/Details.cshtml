@model DentistSpace.Web.Models.Posts.PostDetailsViewModel
@using Microsoft.Security.Application;
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-panel">
    <div class="blog-card">
        <h4 class="card-title grey-text text-darken-4">
            @Model.Title
        </h4>

        <div class="row">
            <img style="width:20%;" src="@Model.ImageUrl" alt="image">
        </div>


        <div class="row">
            <div class="col s8  offset-s2">
                <p>@Html.Raw(Sanitizer.GetSafeHtml(Model.Content))</p>
            </div>
        </div>
        <div class="row">
            <div class="col s1">
                <img src="@Model.UserAvatar" alt="Dentist avatar" class="circle responsive-img valign profile-image">
            </div>
            <div class="col s9"> By <a href="@Model.UserDetailsLink">@Model.UserName</a></div>
            <div class="col s2">
                <ul class="card-action-buttons">
                    <li>
                        <a class="btn-floating waves-effect waves-light green accent-4"><i class="mdi-social-share"></i></a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <span class="right">@Model.CreatedOn</span>
            </div>
        </div>
    </div>
</div>
